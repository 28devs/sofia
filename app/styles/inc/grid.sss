.block
  padding: 45px 0 @md 60px 0 @lg 100px 0

.container
  max-width: $container-sm-px
  margin: * auto
  padding: * 14px @md * 3vw @xl * 26px

  &--md-full
    padding: @sm-down 0
    max-width: @sm-down 100%
    margin: @sm-down 0

@media $md
  .container
    max-width: $container-md-px

@media $lg
  .container
    max-width: $container-lg-px

@media $xl
  .container
    max-width: $container-xl-px
