  .form__container

    .form__head
      .form__step
        .form__step-number 1.
        .form__step-text Введите свои данные

      .form__step.form__step--active
        .form__step-number 2.
        .form__step-text Выберите способ оплаты

      .form__step
        .form__step-number 3.
        .form__step-text Получите доступ к марафону

    form.form__body
